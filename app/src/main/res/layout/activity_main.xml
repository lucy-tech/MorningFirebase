<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/flowerID"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="544dp"
        android:backgroundTint="#EC407A"
        android:backgroundTintMode="src_in"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Flower ID"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#292828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/flowerName"
        android:layout_width="267dp"
        android:layout_height="51dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="483dp"
        android:backgroundTint="#EC407A"
        android:backgroundTintMode="src_in"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:ems="10"
        android:hint="Flower Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#292828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowerID" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="269dp"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="423dp"
        android:backgroundTint="#EC407A"
        android:backgroundTintMode="src_in"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#292828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowerName" />

    <Button
        android:id="@+id/cmdAdd"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="483dp"
        android:backgroundTint="#0C6E64"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/flowerName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cmdSearch"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="423dp"
        android:backgroundTint="#0C6E64"
        android:text="SEARCH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdAdd"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cmdDelete"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="362dp"
        android:backgroundTint="#0C6E64"
        android:text="DELETE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cmdSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdSearch"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cmdUpdate"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="303dp"
        android:backgroundTint="#0C6E64"
        android:text="UPDATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cmdDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdDelete"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/type"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="362dp"
        android:backgroundTint="#EC407A"
        android:backgroundTintMode="src_in"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:ems="10"
        android:hint="Flower Type"
        android:inputType="textCapWords"
        android:textColorHint="#292828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantity" />

    <EditText
        android:id="@+id/price"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="304dp"
        android:backgroundTint="#EC407A"
        android:backgroundTintMode="src_in"
        android:digits="0123456789.,"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textColorHint="#292828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="33dp"
        android:background="#80CBC4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="352dp"
        android:layout_height="34dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="245dp"
        android:text="Click the box below to select image"
        android:textColor="#0C6E64"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

</androidx.constraintlayout.widget.ConstraintLayout>
